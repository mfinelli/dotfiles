# show the from header during composition
# set edit_headers=yes

unset use_domain
# unset user_agent

set ssl_force_tls = yes

# vim-like keybindings
bind pager j next-line
bind pager k previous-line
bind attach,index,pager \CD next-page
bind attach,index,pager \CU previous-page
bind pager g top
bind pager G bottom
bind attach,index g first-entry
bind attach,index G last-entry

# set send_charset="us-ascii:utf-8"
set send_charset="utf-8"

set crypt_use_gpgme=yes
# source /usr/share/doc/mutt/samples/gpg.rc

source "~/.mutt/finelli"
folder-hook "mario@finel.li/*" source ~/.mutt/finelli
folder-hook "mario@scul.ch/*" source ~/.mutt/sculch

# shortcuts
macro index,pager <f2> '<sync-mailbox><enter-command>source ~/.mutt/finelli<enter><change-folder>!<enter>'
macro index,pager <f3> '<sync-mailbox><enter-command>source ~/.mutt/sculch<enter><change-folder>!<enter>'

macro index 'c' '<change-folder>?<change-dir><home>^K=<enter>'
