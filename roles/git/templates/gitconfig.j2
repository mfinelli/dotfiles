; {{ ansible_managed }}

[user]
{% if mtype == "work" %}
	email = mfinelli@genedx.com
{% else %}
	email = mario@finel.li
{% endif %}
	name = Mario Finelli

[alias]
	network = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
	plog = log -p --stat

[core]
	excludesfile = {{ ansible_user_dir }}/.gitignore_global
	precomposeunicode = true
{% if ansible_os_family == "Darwin" and ansible_architecture == "amd64" %}
	editor = /opt/homebrew/bin/git
{% elif ansible_os_family == "Darwin" and ansible_architecture == "x86_64" %}
	editor = /usr/local/bin/vim
{% else %}
	editor = /usr/bin/vim
{% endif %}

[init]
	defaultBranch = master

[pull]
	ff = only

; vim: ft=gitconfig.jinja2
