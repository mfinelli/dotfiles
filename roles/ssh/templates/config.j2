# {{ ansible_managed }}

{% if mtype == "work" %}
AddKeysToAgent yes
User {{ work_ssh_username }}
{% else %}
Host *.archlinux.org
    IdentityFile ~/.ssh/arch
    IdentitiesOnly yes
    AddKeysToAgent yes
    KexAlgorithms curve25519-sha256@libssh.org
    HostKeyAlgorithms ssh-ed25519-cert-v01@openssh.com,ssh-ed25519
    Ciphers chacha20-poly1305@openssh.com,aes256-gcm@openssh.com,aes256-ctr
    MACs hmac-sha2-512-etm@openssh.com
    HashKnownHosts yes
    VisualHostKey yes

Host bitbucket.org
    User git
    IdentityFile ~/.ssh/bitbucket
    IdentitiesOnly yes
    AddKeysToAgent yes
    HashKnownHosts yes
    VisualHostKey yes

Host github.com
    User git
    IdentityFile ~/.ssh/github
    IdentitiesOnly yes
    AddKeysToAgent yes
    HashKnownHosts yes
    VisualHostKey yes

Host *.scul.ch
    User mario
    IdentityFile ~/.ssh/sculch
    IdentitiesOnly yes
    AddKeysToAgent yes
    HashKnownHosts no
    VisualHostKey yes

Host source.developers.google.com
    User mario@scul.ch
    IdentityFile ~/.ssh/google
    IdentitiesOnly yes
    AddKeysToAgent yes

Host {{ ssh_emerald_host }}
    User {{ ssh_emerald_user }}
    IdentityFile ~/.ssh/emerald
    IdentitiesOnly yes
    AddKeysToAgent yes
    HashKnownHosts yes
    VisualHostKey yes

{% for region in ssh_codecommit_regions %}
Host git-codecommit.{{ region }}.amazonaws.com
    User {{ ssh_codecommit_user }}
    IdentityFile ~/.ssh/sculch_old
    IdentitiesOnly yes
    AddKeysToAgent yes

{% endfor %}

{% for region in ssh_mariomoney_regions %}
Host git-codecommit.{{ region }}.amazonaws.com
    User {{ ssh_mariomoney_user }}
    IdentityFile ~/.ssh/sculch_old
    IdentitiesOnly yes
    AddKeysToAgent yes

{% endfor %}
{% endif %}

