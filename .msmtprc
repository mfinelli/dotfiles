defaults
auth on
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
tls_starttls off

account sculch
host mail.runbox.com
port 465
from mario@scul.ch
user mario%scul.ch
passwordeval "gpg -q --for-your-eyes-only --no-tty -d ~/.mutt/.sculch.asc"

account finelli
host neomailbox.net
port 465
from mario@finel.li
user mario.finelli
passwordeval "gpg -q --for-your-eyes-only --no-tty -d ~/.mutt/.finelli.asc"

account default : finelli

