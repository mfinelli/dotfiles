set mbox_type=Maildir
set folder=$HOME/.mail/mario@finel.li
set spoolfile=+Inbox

set record = +Sent
set postponed = +Drafts
set realname = "Mario Finelli"
set from = "mario@finel.li"
set use_from = yes

set sendmail = "/usr/bin/msmtp -a finelli"

set pgp_sign_as = "0x36FDA306"

macro index D \
    "<save-message>=Trash<enter>" \
    "move message to the trash"

